@model IEnumerable<Auto.Models.Part>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-carModelId="@ViewBag.CarModelId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.PartId">Delete</a> |
                    <form asp-action="UsePart" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.PartId" />
                        <button type="submit" class="btn btn-primary">Отметить использование запчасти</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>