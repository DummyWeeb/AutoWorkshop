@model IEnumerable<Auto.Models.Brand>

@{
    ViewData["Title"] = "Список марок автомобилей";
}

<h1>Список марок автомобилей</h1>

<p>
    <a asp-action="Create">Добавить новую марку автомобиля</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Логотип
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="CarModels" asp-action="Index" asp-route-brandId="@item.BrandId">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.LogoPath))
                    {
                        <img src="@item.LogoPath" alt="Логотип" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BrandId">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.BrandId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
