@model Auto.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label"></label>
                <input asp-for="PricePerUnit" class="form-control" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Поставщик</label>
                <select asp-for="SupplierId" class="form-control">
                    <option value="">Выберите поставщика</option>
                    @foreach (var supplier in ViewBag.Suppliers)
                    {
                        <option value="@supplier.SupplierId">@supplier.Name</option>
                    }
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            <div id="orderPartsContainer">
                <div class="form-group">
                    <label>Запчасть</label>
                    <select name="OrderParts[0].PartId" class="form-control">
                        <option value="">Выберите запчасть</option>
                        @foreach (var part in ViewBag.Parts)
                        {
                            <option value="@part.PartId">@part.Name</option>
                        }
                    </select>
                    <label>Модель автомобиля</label>
                    <select name="OrderParts[0].CarModelId" class="form-control">
                        <option value="">Выберите модель автомобиля</option>
                        @foreach (var carModel in ViewBag.CarModels)
                        {
                            <option value="@carModel.CarModelId">@carModel.Name</option>
                        }
                    </select>
                    <label>Количество</label>
                    <input name="OrderParts[0].Quantity" class="form-control" />
                </div>
            </div>
            <button type="button" id="addOrderPart" class="btn btn-secondary">Добавить запчасть</button>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let orderPartIndex = 1;
        document.getElementById('addOrderPart').addEventListener('click', function () {
            const container = document.getElementById('orderPartsContainer');
            const newOrderPart = document.createElement('div');
            newOrderPart.classList.add('form-group');
            newOrderPart.innerHTML = `
                <label>Запчасть</label>
                <select name="OrderParts[${orderPartIndex}].PartId" class="form-control">
                    <option value="">Выберите запчасть</option>
        @foreach (var part in ViewBag.Parts)
        {
                            <option value="@part.PartId">@part.Name</option>
        }
                </select>
                <label>Модель автомобиля</label>
                <select name="OrderParts[${orderPartIndex}].CarModelId" class="form-control">
                    <option value="">Выберите модель автомобиля</option>
        @foreach (var carModel in ViewBag.CarModels)
        {
                            <option value="@carModel.CarModelId">@carModel.Name</option>
        }
                </select>
                <label>Количество</label>
                <input name="OrderParts[${orderPartIndex}].Quantity" class="form-control" />
            `;
            container.appendChild(newOrderPart);
            orderPartIndex++;
        });
    </script>
}