@model Auto.Models.Order

@{
    ViewData["Title"] = "Создание заказа";
}

<h1>Создать заказ</h1>

<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label">Дата заказа</label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label">Общая сумма</label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label">Цена за единицу</label>
                <input asp-for="PricePerUnit" class="form-control" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierName" class="control-label">Выберите поставщика</label>
                <input id="supplierInput" name="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div id="orderPartsContainer">
                <div class="form-group">
                    <label>Запчасть</label>
                    <input name="OrderParts[0].PartName" class="form-control partInput" />
                    <label>Количество</label>
                    <input name="OrderParts[0].Quantity" class="form-control" />
                </div>
            </div>
            <button type="button" id="addOrderPart" class="btn btn-secondary">Добавить запчасть</button>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        $(function () {
            // Autocomplete for suppliers
            var suppliers = @Html.Raw(ViewBag.SuppliersJson);
            $("#supplierInput").autocomplete({
                source: function (request, response) {
                    var results = $.ui.autocomplete.filter(suppliers, request.term);
                    response(results.slice(0, 5));
                }
            }).focus(function () {
                $(this).autocomplete("search", "");
            }).click(function () {
                $(this).autocomplete("search", "");
            });

            // Autocomplete for parts
            var parts = @Html.Raw(ViewBag.PartsJson);
            $(document).on("focus", ".partInput", function () {
                $(this).autocomplete({
                    source: function (request, response) {
                        var results = $.ui.autocomplete.filter(parts, request.term);
                        response(results.slice(0, 5));
                    }
                }).focus(function () {
                    $(this).autocomplete("search", "");
                }).click(function () {
                    $(this).autocomplete("search", "");
                });
            });

            let orderPartIndex = 1;
            document.getElementById('addOrderPart').addEventListener('click', function () {
                const container = document.getElementById('orderPartsContainer');
                const newOrderPart = document.createElement('div');
                newOrderPart.classList.add('form-group');
                newOrderPart.innerHTML = `
                    <label>Запчасть</label>
                    <input name="OrderParts[${orderPartIndex}].PartName" class="form-control partInput" />
                    <label>Количество</label>
                    <input name="OrderParts[${orderPartIndex}].Quantity" class="form-control" />
                    <button type="button" class="btn btn-danger removeOrderPart">Удалить</button>
                `;
                container.appendChild(newOrderPart);
                orderPartIndex++;
            });

            $(document).on('click', '.removeOrderPart', function () {
                $(this).closest('.form-group').remove();
            });
        });
    </script>
}